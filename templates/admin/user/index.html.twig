{% extends 'admin/base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block body %}

<div class="container">
    <h1 class="h1 mt-3 mb-4">Gestion des utilisateurs</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Mail</th>
                <th>Picture</th>
                <th>Introduction</th>
                <!-- <th>Description</th> -->
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.email }}</td>
                <td><img src="{{user.picture}}" style="max-width: 45px; max-height: 45px" alt="Avatar de {{user.Firstname}}" class="avatar avatar-micro mr-2">
                </td>
                <td>{{ user.introduction }}</td>
                <!-- <td>{{ user.description }}</td> -->
                <td>
                    <a href="{{ path('admin_user_show', {'id': user.id}) }}">Afficher</a>
                    <a href="{{ path('admin_user_edit', {'id': user.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas d'utilisateurs en base de données</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_user_new') }}">Créer un nouveau utilisateur</a>
</div>
{% endblock %}
